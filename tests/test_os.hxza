// Test 7: Hexza.OS Module
print("Test 7: Hexza.OS Module")
print("========================================")

// Test platform info
print("Platform: " + Hexza.OS.platform())
print("Pointer Size: " + str(Hexza.OS.ptr_size))

// Test memory allocation
print("\nTesting memory allocation...")
size = 64
ptr = Hexza.OS.alloc(size)
print("Allocated " + str(size) + " bytes at " + str(Hexza.OS.address(ptr)))

// Test write/read
print("Writing data...")
msg = "Hello Memory!"
Hexza.OS.write(ptr, msg)

print("Reading data...")
read_back = Hexza.OS.read(ptr, len(msg))
print("Read: " + str(read_back))

// Verify content
if (str(read_back) == "b'" + msg + "'") {
    print(">> Memory read/write successful")
} else {
    // Python 3 bytes string representation might vary slightly but usually b'...'
    print(">> Memory read/write check (manual verification needed for bytes string)")
}

print("\n>> Test 7 Passed!")
